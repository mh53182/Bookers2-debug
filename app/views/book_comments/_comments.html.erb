<table>
  <% book.book_comments.each do |comment| %>
    <tr>
      <td>
        <%= link_to (comment.user) do %>
          <%= image_tag comment.user.get_profile_image, size:"50x50" %><br>
          <%= comment.user.name %>
        <% end %>
      </td>
      <td>
        <%= comment.comment %>
      </td>
      <% if comment.user == current_user %>
        <td>
          <%= link_to "Destroy", book_book_comment_path(book.id, comment.id), method: :delete, class: "btn btn-danger", remote: true %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>

<!--非同期通信化のため、Destroyリンクには"remote: true"を追記-->