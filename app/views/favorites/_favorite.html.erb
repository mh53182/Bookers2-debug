<% if book.favorited_by?(current_user) %>
  <P>
    <%= link_to book_favorites_path(book.id), method: :delete, style: "color: red;", remote: true,data: {"turbolinks" => false} do %>
      <i class="fa-solid fa-heart"></i><%= book.favorites.count %>
    <% end %>
  </P>
  <% else %>
  <p>
    <%= link_to book_favorites_path(book.id), method: :post, remote: true,data: {"turbolinks" => false} do %>
      <i class="fa-solid fa-heart"></i><%= book.favorites.count %>
    <% end %>
  </p>
<% end %>

<!--Ajax化のため"link_to"に"remote: true"を追記-->
<!--いいね済のいいねボタンを赤くする'"style: "color: red"'は、アイコンの方に↓-->
